<Window x:Class="SemantiCore.Windows.TerminalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SemantiCore.Windows"
        mc:Ignorable="d"
        Title="SemantiCore: Терминал" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="CommandsStack">
            <TextBlock Text="Терминал управления хостингом." Margin="5" FontWeight="Bold"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="InputBox" Padding="10" PreviewKeyDown="InputKeyDown"/>
            <Button Content="Отправить" Grid.Column="1" Click="SendClicked"/>
        </Grid>
    </Grid>
</Window>
